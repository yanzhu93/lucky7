    font-size: 32rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
    margin-top:44rpx;
    font-weight: bold;
}
.vice_header{
    font-size: 28rpx;
    color:#949494;
}
.pic{
